{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "module": "ES2022",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "composite": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "~assets/*": [
        "src/assets/*"
      ],
      "~modules/*": [
        "src/modules/*"
      ],
      "~router/*": [
        "src/router/*"
      ],
      "~shared/*": [
        "src/shared/*"
      ],
      "~store/*": [
        "src/store/*"
      ],
      "~typings/*": [
        "src/typings/*"
      ],
      "~/*": [
        "src/*"
      ],
      "~services/*": [
        "src/services/*"
      ],
      "~config/*": [
        "src/config/*"
      ],
      "~types/*": [
        "src/types/*"
      ],
      "~hooks/*": [
        "src/hooks/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./vite.config.ts"
  ],
  "exclude": [
    "./node_modules",
    "test",
    "./dist",
    "**/*spec.ts"
  ]
}